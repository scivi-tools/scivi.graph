{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "module": "es6",
        "target": "es5",
        "moduleResolution": "node",
        "strict": true,
        "alwaysStrict": true
    },
    "include": [
        "./src/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}