{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "module": "es6",
        "target": "es5",
        "moduleResolution": "node",
        "strict": true,
        "alwaysStrict": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types",
            "./src/@types"
        ]
    },
    "include": [
        "./src/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}